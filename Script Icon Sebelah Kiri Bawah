<script>
    function toggleWidget() {
        var list = document.getElementById("widgetList");
        var btn = document.getElementById("toggleBtn");

        // Cek apakah sedang tertutup atau terbuka
        if (list.classList.contains("closed")) {
            // Jika tertutup, maka BUKA
            list.classList.remove("closed");
            btn.innerHTML = "&times;"; // Ubah icon tombol jadi X
        } else {
            // Jika terbuka, maka TUTUP
            list.classList.add("closed");
            btn.innerHTML = "&#9776;"; // Ubah icon tombol jadi garis 3 (Menu)
        }
    }
</script>
